<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="..."
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="?android:attr/selectableItemBackground"
android:clickable="true"
android:gravity="center_vertical"
android:paddingBottom="@dimen/padding_small"
android:paddingEnd="@dimen/padding_avg"
android:paddingRight="@dimen/padding_avg"
android:paddingStart="@dimen/padding_avg"
android:paddingTop="@dimen/padding_small"
>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/text_view_user_alphabet"
android:background="@drawable/circle_accent"
android:gravity="center"
android:maxEms="1"
android:txtAllCaps="true"
android:textAppearance="?android:attr/textApperanceLarge"
android:textColor="@color/grey_300"
android:textStyle="bold"
tools:text="a"
/>

<android.support.v4.widget.Space
android:layout_width="@dimen/space_avg"
android:layout_height="wrap_content"

/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/text_view_usernaame"
android:ellipsize="end"
android:maxLines="1"
android:txtAllCaps="true"
android:textAppearance="?android:attr/textApperanceLarge"
android:textColor="@color/grey_200"
tools:text="abcdxyz@abc.com"
/>

</LinearLayout>